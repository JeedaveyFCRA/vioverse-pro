# ============================================
# VIOVERSE V3 ENVIRONMENT CONFIGURATION
# ============================================
# Copy this file to .env.local for development
# or set these in Render.com dashboard for production

# --------------------------------------------
# APPLICATION
# --------------------------------------------
NODE_ENV=development
PORT=3000

# --------------------------------------------
# URLs (Update these for production)
# --------------------------------------------
NEXT_PUBLIC_APP_URL=http://localhost:3000
NEXT_PUBLIC_API_URL=http://localhost:3000/api

# --------------------------------------------
# DATABASE
# --------------------------------------------
# PostgreSQL connection string
# For Render: Use the Internal Database URL from your PostgreSQL service
DATABASE_URL="postgresql://user:password@localhost:5432/vioverse_v3?schema=public"

# Non-pooling connection (for migrations)
DATABASE_URL_NON_POOLING="postgresql://user:password@localhost:5432/vioverse_v3?schema=public"

# --------------------------------------------
# AUTHENTICATION
# --------------------------------------------
# Generate with: openssl rand -base64 32
NEXTAUTH_SECRET=your-super-secret-key-here-min-32-chars
NEXTAUTH_URL=http://localhost:3000

# OAuth Providers (optional)
GOOGLE_CLIENT_ID=
GOOGLE_CLIENT_SECRET=
GITHUB_CLIENT_ID=
GITHUB_CLIENT_SECRET=

# --------------------------------------------
# REDIS (Optional - for caching)
# --------------------------------------------
REDIS_URL=redis://localhost:6379
UPSTASH_REDIS_REST_URL=
UPSTASH_REDIS_REST_TOKEN=

# --------------------------------------------
# FILE STORAGE
# --------------------------------------------
# For local development
STORAGE_TYPE=local
STORAGE_PATH=./data

# For production (S3-compatible)
S3_ENDPOINT=
S3_BUCKET=vioverse-uploads
S3_ACCESS_KEY=
S3_SECRET_KEY=
S3_REGION=us-east-1

# --------------------------------------------
# MONITORING & ANALYTICS
# --------------------------------------------
# Sentry
SENTRY_DSN=
SENTRY_AUTH_TOKEN=
SENTRY_ORG=
SENTRY_PROJECT=

# Vercel Analytics (if using Vercel)
NEXT_PUBLIC_VERCEL_ANALYTICS_ID=

# Google Analytics
NEXT_PUBLIC_GA_ID=

# --------------------------------------------
# EMAIL (Optional)
# --------------------------------------------
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=
SMTP_PASSWORD=
EMAIL_FROM=noreply@vioverse.com

# --------------------------------------------
# API KEYS (Optional)
# --------------------------------------------
# OpenAI (for AI features)
OPENAI_API_KEY=

# --------------------------------------------
# RATE LIMITING
# --------------------------------------------
RATE_LIMIT_ENABLED=true
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW_MS=60000

# --------------------------------------------
# FEATURE FLAGS
# --------------------------------------------
FEATURE_AI_DETECTION=false
FEATURE_EXPORT_PDF=true
FEATURE_TIMELINE_VIEW=true
FEATURE_MULTI_LANGUAGE=false

# --------------------------------------------
# SECURITY
# --------------------------------------------
# Content Security Policy
CSP_REPORT_URI=
ENABLE_CSP=true

# CORS
CORS_ORIGINS=http://localhost:3000,http://localhost:3001
CORS_CREDENTIALS=true

# --------------------------------------------
# DEVELOPMENT ONLY
# --------------------------------------------
# Disable in production
NEXT_PUBLIC_DEBUG_MODE=false
ANALYZE_BUNDLE=false

# --------------------------------------------
# RENDER.COM SPECIFIC (Set in Render Dashboard)
# --------------------------------------------
# RENDER=true
# RENDER_SERVICE_NAME=
# RENDER_SERVICE_TYPE=
# RENDER_GIT_COMMIT=